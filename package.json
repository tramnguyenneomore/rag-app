  "scripts": {
    "start": "cds-serve",
    "watch-hr-approval-ui": "cds watch --open hr-approval-ui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy rag-quick-start-app --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": "hana",
      "gen-ai-hub": {
        "gpt-4o-mini": {
          "destinationName": "GenAIHubDestination",
          "deploymentUrl": "/v2/inference/deployments/d132f104bc8b8dd5",
          "resourceGroup": "default",
          "apiVersion": "2024-02-15-preview",
          "modelName": "gpt-4o-mini"
        },
        "text-embedding-ada-002": {
          "destinationName": "GenAIHubDestination",
          "deploymentUrl": "/v2/inference/deployments/dac2ba90e5027cda",
          "resourceGroup": "default",
          "apiVersion": "2",
          "modelName": "text-embedding-ada-002"
        }
      },
      "GenAIHubDestination": {
        "kind": "rest",
        "credentials": {
          "destination": "aicore-destination",
          "requestTimeout": "300000"
        }
      },
      "[hybrid]": {
        "db": "hana",
        "cap-llm-plugin": {
          "impl": "cap-llm-plugin/srv/cap-llm-plugin.js"
        },
        "destinations": true,
        "auth": {
          "passport": {
            "strategy": "mock",
            "users": {
              "JohnDole@tester.sap.com": {
                "ID": "dummy.user@com",
                "password": "initial"
              }
            }
          }
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "db": "hana",
        "cap-llm-plugin": {
          "impl": "cap-llm-plugin/srv/cap-llm-plugin.js"
        },
        "destinations": true
      }
    },
    "sapux": [
      "app/hr-approval-ui"
    ]
  }
